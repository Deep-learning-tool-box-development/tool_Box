from dataset import import_data
from pso import PSO
from dbn import DBN
from sa import SA


def run_dbn_pso(path_to_data):
    """
    Main function for the DBN and PSO.
    :param path_to_data: string, Folder of the data files
    :return: None
    """
    # create the DBN model
    x_train, x_test, y_train, y_test = import_data(path_to_data, model='DBN')
    params = [[0.5, 0.8], [1e-4, 1e-3], [1e-4, 1e-3]]
    dbn = DBN(train_data=x_train, tragets=y_train,
              output=4,batch_size=4,
              rbm_layers = [200,50],
              outdir=None,
              logdir=None,
              optimization=True)
    pso = PSO(dbn.dbn_get_score, 5, 10, var_size=params)
    pso.run()


def run_dbn_sa(path_to_data):
    """
    Main function for the DBN and SA.
    :param path_to_data: string, Folder of the data files
    :return: None
    """
    x_train, x_test, y_train, y_test = import_data(path_to_data, model='DBN')
    params = [[0.5, 0.8], [1e-4, 1e-3], [1e-4, 1e-3]]
    dbn = DBN(train_data=x_train, targets=y_train,
              batch_size=64,
              rbm_layers = [200,50],
              outdir=None,
              logdir=None,
              optimization=True)
    sa = SA(dbn.dbn_get_score, 10, 0.1, 1, var_size=params)
    sa.run()


if __name__ == '__main__':
    """
    Main function to call the selected model and optimizer
    """
    # Main function
    option = 'PSO'
    path = 'PATH TO DATASET'
    if option == 'PSO':
        run_dbn_pso(path)

    elif option == 'SA':
        run_dbn_sa()
